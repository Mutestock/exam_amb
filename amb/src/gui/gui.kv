#:kivy 1.11.1

<ConfigurationPopup>:
    title: root.popup_name
    size_hint: None, None
    size: 259, 200
    auto_dismiss: False

    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: txtinput
            text: root.obj_text
            size_hint_y: 0.2
        Button:
            size_hint: 1, 0.2
            text: "Save Changes"
            on_release:
                root.obj.update_changes(txtinput.text)
                root.dismiss()
        Button:
            size_hint: 1, 0.2
            text: "Cancel Changes"
            on_release: root.dismiss()

<SelectableButton>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<PlayAllButton>:
    id: "id_play_all_button"
    text: "play all"

<StopAllButton>:
    id: "id_stop_all_button"
    text: "stop all"

<LoadFileButton>:
    id: "id_load_button"
    text: "load file"

<GenrePopup>:
    BoxLayout:
        orientation:'vertical'
        pos:root.pos
        TextInput:
            id: txtinput
        Button:
            text: "Submit"
            on_release: root.text_input(txtinput.text)


<LoadDialog>:
    BoxLayout:
        orientation: 'vertical'
        pos:root.pos
        FileChooserListView:
            id: filechooser
            path: '.'
        
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: 'Cancel'
                on_release: root.cancel()
            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<ToolBar>:
    rows:1
    LoadFileButton:
    PlayAllButton:
    StopAllButton:
    


<RV>:
    BoxLayout:
        orientation: 'vertical'
        ToolBar:
            size_hint:1, None
            height:50
        GridLayout:
            size_hint: 1, None
            height: 25
            cols: root.track_object_size
            Label:
                text: "Name"
            Label:
                text: "Genre"
            Label:
                text: "Duration"
            Label:
                text: "Mono/Stereo"
            Label:
                text: "Interval"    
            Label:
                text: "Volume"
            Label:
                text: "Fade Start"
            Label:
                text: "Fade End"
            Label:
                text:"R int max"
            Label:
                text:"R int min"
            Label:
                text:"R vol max"
            Label:
                text:"R vol min"
            Label:
                text:""



        BoxLayout:
            RecycleView:
                viewclass: "SelectableButton"
                data: [{'text': str(x)} for x in root.data_items]
                SelectableRecycleGridLayout:
                    cols: root.track_object_size
                    default_size: None, dp(26)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: "vertical"
                    multiselect: True
                    touch_nultiselect: True


    